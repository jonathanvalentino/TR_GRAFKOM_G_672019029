	glColor3f(0.768, 0.749, 0.749);
	glVertex3f(-180.0, 60.0, -290.0);
	glVertex3f(-90.0, 60.0, -95);
	glVertex3f(-40.0, 60.0, -95.0);
	glVertex3f(-40.0, 60.0, -290.0);
	glEnd();

}

